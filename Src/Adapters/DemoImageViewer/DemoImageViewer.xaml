<dynamics:DynamicsBaseHostedControl x:Class="Microsoft.USD.ComponentLibrary.DemoImageViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:dynamics="clr-namespace:Microsoft.Crm.UnifiedServiceDesk.Dynamics;assembly=Microsoft.Crm.UnifiedServiceDesk.Dynamics"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ToolBarTray Name="ProgrammableToolbarTray" Grid.Row="0"/>
        <!-- this is where any toolbar assigned to this control will go -->
        <Button Click="Image_Click" Grid.Row="1" Background="Transparent">
            <Image x:Name="imageDisplay" Stretch="Uniform">

            </Image>
        </Button>
    </Grid>
</dynamics:DynamicsBaseHostedControl>
